<UserControl x:Class="CinemaSchedule.UserControls.MovieControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaSchedule.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="950">
    <Grid>
        <Rectangle RadiusX="25" RadiusY="25" Fill="#FFD4F7F6" Width="950" Height="550"></Rectangle>
        <TextBlock x:Name="movieName" Text="Name" TextWrapping="Wrap" HorizontalAlignment="Center"  Margin="20,15,20,0" VerticalAlignment="Top" FontSize="18" Width="850" Height="30" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock x:Name="movieDescription" Text="

" TextWrapping="Wrap" HorizontalAlignment="Center"  Margin="20,55,20,0" VerticalAlignment="Top" FontSize="16" Width="900" Height="250"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="20,0,0,20" VerticalAlignment="Bottom" Background="#FFFCFCFC" FontSize="16" BorderThickness="1" BorderBrush="Black" Width="100" Click="Button_Click_1"  />
        <Button Content="Удалить" HorizontalAlignment="Right" Margin="0,0,20,20" VerticalAlignment="Bottom" Background="#FFFDB9B9" FontSize="16" BorderThickness="1" BorderBrush="Black" Width="100" Click="Button_Click"  />
        <Label x:Name="movieID" Content="Label" HorizontalAlignment="Left" Margin="70,10,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
        <TextBlock x:Name="movieGenre" Text="Жанры:" TextWrapping="Wrap" HorizontalAlignment="Center"  Margin="-810,310,20,0" VerticalAlignment="Top" FontSize="18" Width="100" Height="30" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock x:Name="movieGenres" Text="" TextWrapping="Wrap" HorizontalAlignment="Center"  Margin="100,315,20,0" VerticalAlignment="Top" FontSize="14" Width="800" Height="60"  TextAlignment="Left"/>
        <TextBlock x:Name="movieCountry" Text="Страны:" TextWrapping="Wrap" HorizontalAlignment="Center"  Margin="-810,380,20,0" VerticalAlignment="Top" FontSize="18" Width="100" Height="30" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock x:Name="movieCountries" Text="" TextWrapping="Wrap" HorizontalAlignment="Center"  Margin="100,385,20,0" VerticalAlignment="Top" FontSize="14" Width="800" Height="60"  TextAlignment="Left"/>
        <TextBlock x:Name="startingDate" Text="Старт проката:" TextWrapping="Wrap" HorizontalAlignment="Center"  Margin="-750,450,20,0" VerticalAlignment="Top" FontSize="18" Width="150" Height="30" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock x:Name="startingDateText" Text="03-02-2002" TextWrapping="Wrap" HorizontalAlignment="Center"  Margin="-500,455,20,0" VerticalAlignment="Top" FontSize="14" Width="120" Height="25"  TextAlignment="Center"/>
        <TextBlock x:Name="endingDate" Text="Конец проката:" TextWrapping="Wrap" HorizontalAlignment="Center"  Margin="410,450,20,0" VerticalAlignment="Top" FontSize="18" Width="150" Height="30" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock x:Name="endingDateText" Text="03-02-2002" TextWrapping="Wrap" HorizontalAlignment="Center"  Margin="650,455,20,0" VerticalAlignment="Top" FontSize="14" Width="120" Height="25"  TextAlignment="Center"/>
    </Grid>
</UserControl>
